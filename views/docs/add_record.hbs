<main role="main">
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 border-bottom">
		<div class="col-md-9 order-md-1">
			<h4 class="mb-4">Добавление новой записи</h4>
			<form role="form" method="POST" data-disable=true id="inputForm" action="/docs/new/" enctype="multipart/form-data">
				<div class="form-group row">
					<div class="col-md-6 mb-3">
						<label for="firstName">Сотрудник</label>
						<input type="text" class="form-control" id="firstName" name="employee" placeholder="ФИО сотрудника" value="{{user.fullname}}"
						 required>
					</div>
					<div class="col-md-6 mb-3">
						<label for="service">Служба</label>
						<select class="form-control" id="service" name="service" required>
							<option value="">Выбор службы...</option>
							<option>Служба1</option>
							<option>Служба2</option>
							<option>Служба3</option>
							<option>Служба4</option>
							<option>Служба5</option>
						</select>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-md-4 mb-3">
						<label for="book-number">Номер ЕК</label>
						<input type="number" min="1" class="form-control" id="book-number" name="book_number" required>
					</div>
					<div class="col-md-4 mb-3">
						<label for="registrationDate">Дата регистрации</label>
						<input type="date" class="form-control registrationDate" id="registrationDate" name="registration_date" required>

					</div>
					<div class="col-md-4 mb-3">
						<label for="cc_article">Статья УК</label>
						<select class="custom-select d-md-block w-100" id="cc_article" name="cc_article" required>
							<option value="">Выберите статью...</option>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label for="description">Фабула</label>
					<!-- <input type="text" class="form-control" id="description" placeholder="Описание" value="" required> -->
					<textarea class="form-control" rows="6" id="description" name="description" placeholder="Введите описание" value=""
					 required aria-label="Описание"></textarea>
				</div>

				<div class="form-group mb-4">
					<label for="comment">Примечание</label>
					<input type="text" class="form-control" id="comment" name="comment">
				</div>

				<hr class="mb-4">
				<h4 class="mb-4">Срок рассмотрения материала:
					<small class="deadline text-muted" name="deadline" readonly></small>
				</h4>

				<div class="form-group row termExtended">
					<div class="col-md-3 mb-3">
						<div class="custom-control custom-radio">
							<input class="custom-control-input" id="phaseRadio1" name="phase" value="Продлен" type="radio">
							<label class="custom-control-label px-1" id="phaseExtended" for="phaseRadio1">Продлен</label>
						</div>
					</div>
				</div>

				<div class="form-group row termSuspended">
					<div class="col-md-3 mb-3">
						<div class="custom-control custom-radio">
							<input class="custom-control-input" id="phaseRadio2" name="phase" value="Приостановлен" type="radio">
							<label class="custom-control-label px-1" id="phaseSuspended" for="phaseRadio2">Приостановлен</label>
						</div>
					</div>
				</div>

				<div class="form-group row termRenewed">
					<div class="col-md-3 mb-3">
						<div class="custom-control custom-radio">
							<input class="custom-control-input" id="phaseRadio3" name="phase" value="Возобновлен" type="radio">
							<label class="custom-control-label px-1" id="phaseRenewed" for="phaseRadio3">Возобновлен</label>
						</div>
					</div>
				</div>

				<hr class="mb-4">
				<h4 class="mb-3">Процессуальное решение:</h4>

				<div class="form-group row">
					<div class="col-md-8 mb-3">
						<label for="decision">Решение по делу</label>
						<select class="custom-select d-md-block" id="decision" name="decision" required>
							<option value="">Выберите решение...</option>
						</select>
					</div>
					<div class="col-md-4 mb-3">
						<label for="date3">Дата</label>
						<input type="date" class="form-control" id="date3" name="decision_date" placeholder="" required>
					</div>
				</div>

				<hr class="mb-4">
				<div class="dynamicIdentifiersContainer">
					<div class="form-group row">
						<div class="col-md-4 mb-3">
							<h4>Идентификаторы:</h4>
						</div>
						<div class="col-md-2 mb-3">
							<button class="btn btn-secondary btn-sm btn-block" id="addIdentifiersBtn" type="button" value='Добавление'>
								Добавить
							</button>
						</div>
					</div>
				</div>

				<hr class="mb-4">
				<button class="btn btn-primary btn-lg btn-block mb-4" type="submit">Добавить запись</button>
			</form>
		</div>
	</div>
</main>

<script src="/javascripts/docs/formcontrol.js"></script>
<script src="/javascripts/docs/options/articles_list.js"></script>
<script src="/javascripts/docs/options/decisions_list.js"></script>
<script src="/javascripts/docs/add_record.js"></script>